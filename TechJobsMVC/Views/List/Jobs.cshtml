<div class="container body-content">

    <h1>@ViewBag.title</h1>

    @{

        //TODO #1: Use a loop to display job results in a table.
    }

    @foreach (var job in ViewBag.jobs)
    {
        <table class="job-listing">
            <tr>
                <td>
                    <p>Id: @job.Id</p>
                </td>
            </tr>
            <tr>
                <td>
                    <p>Name: @job.Name</p>
                </td>
            </tr>
            <tr>
                <td>
                    <p>Employer: @job.Employer</p>
                </td>
            </tr>
            <tr>
                <td>
                    <p>Location: @job.Location</p>
                </td>
            </tr>
            <tr>
                <td>
                    <p>Postion Type: @job.PositionType</p>

                </td>
            </tr>
            <tr>

                <td>
                    <p>Core competency: @job.CoreCompetency</p>

                </td>
            <tr>
        </table>
    }


</div>
